<h1>Add New Place</h1>
<div class="well">
  <%= form_for @location do |f| %>
    <%= render 'shared/error_messages', obj: @location %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :address, 'Address' %>
      <%= f.text_field :address, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :is_public, 'Is Public?' %>
      <%= f.check_box :is_public %>
    </div>
    
    <div class="form-group hidden">
      <%= label_tag 'friend_ids', 'Choose Friends' %><br/>
      <%= select_tag 'friend_ids', options_from_collection_for_select((User.all - [current_user]), 'id', 'name'),
          prompt: 'Choose a friend', class: 'form-control', multiple: true %>
    </div>
    
    <%= f.submit 'Share', class: 'btn btn-primary' %>
  <% end %>
</div>
