<!DOCTYPE html>
<html>
<head>
  <title>PlaceSharing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <script src="//maps.google.com/maps/api/js?key=AIzaSyAAiwwviKSbl8dQueSRBLyI6s4cdeH7aeA"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="contanier-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">
            <strong>Place Sharing Site</strong>
          </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Locations shared by Members', users_path %></li>
              <li><%= link_to current_user.name, '#' %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    
    <%= render 'layouts/flash_messages' %>
    <%= yield %>
  </div>
</body>
</html>
